<main class="bg-light text-center signin-area">
  <%= form_with model: @user, url: user_registration_path, class: 'form-signin' do |f| %>
    <div
      class="mb-3 mx-auto border border-light text-secondary rounded shadow-sm"
      style="width: 150px"
    >
      <h1 class="h4">Study Time</h1>
      <i class="fa-regular fa-clock fa-xl"></i>
      <h1 class="h4">Trucker</h1>
    </div>
        <div class="form-group row">
          <%= f.label :name, 'ユーザー名を入力', for: 'inputName' %>
          <%= f.text_field :name, id: 'inputName', class: 'form-control', placeholder: 'ユーザー名', required: true, autofocus: true %>
        </div>
        <div class="form-group row">
          <%= f.label :email, 'メールアドレスを入力', for: 'inputEmail' %>
          <%= f.email_field :email, id: 'inputEmail', class: 'form-control', placeholder: 'メールアドレス', required: true, autofocus: true %>
        </div>
        <div class="form-group row">
          <%= f.label :password, 'パスワードを入力', for: 'inputPassword' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, id: 'inputPassword', class: 'form-control', placeholder: 'パスワード', required: true, autocomplete: "new-password" %>
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'パスワード再入力', required: true, autocomplete: "new-password" %>
        </div>
        <%= f.submit "新規登録", class: 'btn btn-lg btn-primary btn-block' %>
        <%= link_to "ログイン画面へ", new_user_session_path, class: 'btn btn-lg btn-outline-success btn-block' %>
        <p class="mt-5 mb-3 text-muted">© 2024 mishima</p>
      <% end %>
    </main>